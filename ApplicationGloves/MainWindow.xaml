<Window x:Class="ApplicationGloves.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationGloves"
        mc:Ignorable="d"
        Title="Магахин перчаток" Height="450" Width="800" Icon="Resources/Одежда для ручек.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Спортивная школа" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"></TextBlock>
        <Button Content="Назад" Name="BtnBack" Click="BtnBack_Click" Grid.Column="1" HorizontalAlignment="Right"></Button>
        <Frame Name="MainFrame" ContentRendered="MainFrame_ContentRendered" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
